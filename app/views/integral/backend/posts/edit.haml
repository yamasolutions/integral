= content_for :title, t('.title', name: @resource.title)

= content_for :actionbar do
  %ul.list-group.list-group-horizontal.mb-1
    %li.list-group-item
      = link_to t('integral.actions.view_on_site'), @resource.frontend_url, class: 'btn btn-light', icon: 'bi bi-eye'

    - if policy(resource_klass).duplicate?
      %li.list-group-item
        = link_to t('integral.actions.clone'), duplicate_backend_resource_url(@resource), class: 'btn btn-light', method: :post, data: { confirm: t('integral.actions.confirmation.clone') }, icon: 'bi bi-clipboard'
    - if policy(Integral::Version).manager?
      %li.list-group-item
        = link_to t('integral.navigation.activity'), activities_backend_resource_url(@resource), class: 'btn btn-light', icon: 'bi bi-clock-history'

= render 'form'
