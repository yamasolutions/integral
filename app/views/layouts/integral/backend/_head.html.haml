- render_tag_manager ||= local_assigns.fetch(:render_tag_manager, true)

%head
  = google_tag_manager if render_tag_manager
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
  %meta{ name: "ROBOTS", content: "NOINDEX, NOFOLLOW" }
  %meta{ name: 'turbolinks-root', content: "/#{Integral.backend_namespace}" }
  %meta{ name: "direct-upload-url", content: rails_direct_uploads_path }
  %meta{ name: "integral-file-upload-url", content: backend_storage_files_url }
  %meta{ name: "integral-file-list-url", content: list_backend_storage_files_url(format: :json) }
  %meta{ name: "integral-file-accepted-types", content: Integral.accepted_file_types.join(',') }
  %meta{ name: "integral-file-maximum-size", content: Integral.maximum_file_size }

  - if disable_turbolinks?
    %meta{ name: 'turbolinks-visit-control', content: :reload }

  %title= page_title

  %link{ href: 'https://fonts.googleapis.com/css?family=Nunito:400,600', rel: 'stylesheet', type: 'text/css' }

  = stylesheet_link_tag    'integral/backend', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'integral/backend', 'data-turbolinks-track' => true
  = javascript_pack_tag 'integral/backend'
  = stylesheet_pack_tag 'integral/backend'
  = stylesheet_link_tag 'integral/block_editor'

  = csrf_meta_tags
