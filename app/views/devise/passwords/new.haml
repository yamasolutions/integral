%h2= t('.title')
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, validate: true) do |f|
  .input-group
    %span.input-group-label
      = icon('envelope')
    = f.input :email, autofocus: true, input_html: { class: 'input-group-field' }, label: false

  .form-actions
    = f.button :button, "Reset Password", class: 'button expanded'

= render "devise/shared/links"

