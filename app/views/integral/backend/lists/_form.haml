= simple_form_for [:backend, @resource], validate: true, html: { class: 'are-you-sure', 'data-confirm-dirty-form' => true, id: :list_form } do |f|
  = f.input :lock_version, as: :hidden
  .grid-x
    .cell.medium-8
      .grid-y
        = f.input :title
        = f.input :description
    .cell.medium-4
      .grid-y
        = f.input :list_item_limit
        = f.input :children
    .cell= f.button :button
