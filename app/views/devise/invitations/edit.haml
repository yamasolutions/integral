%h2= t 'devise.invitations.edit.header'
= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }, validate: true do |f|
  = f.hidden_field :invitation_token
  .input-group
    %span.input-group-label
      = icon('key')
    = f.input :password, input_html: { 'data-character-counter' => 'false', class: 'input-group-field' }, label: false
  .input-group
    %span.input-group-label
      = icon('key')
    = f.input :password_confirmation, input_html: { class: 'input-group-field' }, label: false

  .form-actions
    = f.button :button, t("devise.invitations.edit.submit_button"), class: 'button expanded'
