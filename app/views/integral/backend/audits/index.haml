.card.listing
  .card-section
    %h2.show-for-small-only= t('.title')
    -# = link_to t('integral.actions.create'), new_backend_audit_url, class: 'button hollow show-for-small-only create'
    .top-bar
      -# .top-bar-left.hide-for-small-only
      -#   = link_to t('integral.actions.create'), new_backend_audit_url, class: 'button hollow'
      .top-bar-right
        = simple_form_for :grid, url: backend_audits_url, method: :get, remote: true, html: { id: :grid_form, 'data-type' => :json } do |f|
          = hidden_field_tag(:gridview, true)
          = f.hidden_field(:descending, value: @grid.descending, class: 'desc-field')
          = f.hidden_field(:order, value: @grid.order, class: 'order-field')
          = f.hidden_field(:page, value: grid_options[:page], class: 'page-field')

          %ul.align-right.menu.filters
            -# %li= f.input :auditable_type, collection: ['Post', 'Page'], label: t('integral.records.attributes.type'), wrapper_html: { class: 'filter' }, input_html: { 'data-filter' => true }, required: false
            %li= f.input :title, placeholder: t('integral.actions.search'), wrapper_html: { class: 'filter search' }, hint: false, label: false

    = render partial: 'grid'
