.card-unpadded.object
  - if resource.present?
    .card-section
      %h2= title
      - if resource.to_backend_card[:image].present?
        = image_tag resource.to_backend_card[:image]
      - else
        = image_tag image_url('integral/defaults/no_image_available.jpg')
      %p.description= resource.to_backend_card[:description]
      - resource.to_backend_card[:attributes].each do |attr|
        .info-item
          %span.attr= attr[:key]
          %span.val= attr[:value]
    = link_to resource.to_backend_card[:url], class: 'button' do
      = icon('eye')
      = t('integral.actions.view')
  - else
    .card-section
      %h2= title
      = t('integral.backend.graphs.data_unavailable')
      = image_tag image_path('integral/backend/data-unavailable.png'), class: 'data-unavailable'
