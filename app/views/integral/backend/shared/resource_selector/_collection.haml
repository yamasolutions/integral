.placeholder
  = render partial: 'integral/backend/shared/resource_selector/resource', locals: { list_item: { image: '', title: '', subtitle: '' }}

- if collection.empty?
  .grid-x
  %p.text-center.no-records
    = t('integral.backend.tables.no_data_available')
    = image_tag image_path('integral/backend/data-unavailable.png')
- else
  .grid-x.small-up-3.medium-up-4.large-up-6
    - collection.each do |obj|
      = render partial: 'integral/backend/shared/resource_selector/resource', locals: { list_item: obj.to_list_item }
  .text-center
    = will_paginate collection, renderer: FoundationPagination::Rails
