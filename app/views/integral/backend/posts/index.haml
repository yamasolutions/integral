= content_for :actionbar do
  %ul.menu.horizontal
    %li= render partial: 'integral/backend/shared/notification_subscription_toggle', locals: { subscribable: resource_klass }

.grid-x
  -# Left Column
  .cell.large-6
    .grid-x
      .cell= render_card(:recent_resources)
