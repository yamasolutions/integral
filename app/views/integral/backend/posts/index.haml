      .cell= render_card(:at_a_glance)

  -# Right Column
  .cell.large-6
    .grid-x
      .cell= render_card(:recent_activity)
      .cell.xlarge-6= render_card(:recent_user_activity)
      .cell.large-6= render_card(:top_post_authors)
